@model ShopFuji.Models.ProductViewModel

@{
	ViewData["Title"] = "Mens Collection";
}

<link href="~/css/mens.css" rel="stylesheet" />
<!--Main Navigation-->
<header>

	<form asp-controller="Home" asp-action="Men" method="get">
		<p>
			<select asp-for="SortString">
				<option value="">All</option>
				<option>Price (Low - High)</option>
				<option>Price (High - Low)</option>
				<option>Latest Arrivals</option>
			</select>


			Title: <input type="text"  asp-for="SearchString" />
			<input type="submit" class="btn btn-danger"  value="Filter" />
		</p>
	</form>
</header>
<!-- sidebar + content -->
<section class="">
	<div class="container">
		<div class="row">
			<!-- sidebar -->
			<div class="col-lg-3">
				<!-- Toggle button -->
				<button class="btn btn-outline-secondary mb-3 w-100 d-lg-none"	
						type="button"
						data-mdb-toggle="collapse"
						data-mdb-target="#navbarSupportedContent"
						aria-controls="navbarSupportedContent"
						aria-expanded="false"
						aria-label="Toggle navigation">
					<span>Show filter</span>
				</button>
				<!-- Collapsible wrapper -->
				<div class="collapse card d-lg-block mb-5" id="navbarSupportedContent">
					<div class="accordion" id="accordionPanelsStayOpenExample">
						<div class="accordion-item">
							<h2 class="accordion-header" id="headingOne">
								<button class="accordion-button text-dark bg-light"
										type="button"
										data-mdb-toggle="collapse"
										data-mdb-target="#panelsStayOpen-collapseOne"
										aria-expanded="true"
										aria-controls="panelsStayOpen-collapseOne">
									Related items
								</button>
							</h2>
							<div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne">
								<div class="accordion-body">
									<ul class="list-unstyled">
										<li><a href="#" class="text-dark" style="text-decoration: none">Electronics </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Home items </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Books, Magazines </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Men's clothing </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Interiors items </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Underwears </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Shoes for men </a></li>
										<li><a href="#" class="text-dark" style="text-decoration: none">Accessories </a></li>
									</ul>
								</div>
							</div>
						</div>
						<div class="accordion-item">
							<h2 class="accordion-header" id="headingTwo">
								<button class="accordion-button text-dark bg-light"
										type="button"
										data-mdb-toggle="collapse"
										data-mdb-target="#panelsStayOpen-collapseTwo"
										aria-expanded="true"
										aria-controls="panelsStayOpen-collapseTwo">
									Brands
								</button>
							</h2>
							<div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo">
								<div class="accordion-body">
									<div>
										<form asp-controller="Home" asp-action="Men" method="get">

											@foreach (var item in Model.Brands)
											{

												<!-- Checked checkbox -->
												<div class="form-check">
													<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked1" />
													<label class="form-check-label" for="flexCheckChecked1">@Html.DisplayFor(model=> item)</label>
													<span class="badge badge-secondary float-end">120</span>
												</div>
											}

										</form>
									</div>
								</div>
							</div>
						</div>
						<div class="accordion-item">
							<h2 class="accordion-header" id="headingThree">
								<button class="accordion-button text-dark bg-light"
										type="button"
										data-mdb-toggle="collapse"
										data-mdb-target="#panelsStayOpen-collapseThree"
										aria-expanded="false"
										aria-controls="panelsStayOpen-collapseThree">
									Price
								</button>
							</h2>
							<form id="rangeForm" asp-controller="Home" asp-action="Men" method="post">
								<div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse show" aria-labelledby="headingThree">
									<div class="accordion-body">
										<div class="range">
											<input type="range" class="form-range" id="customRange1" min="0" max="10000" />
										</div>
										<div class="row mb-3">
											<div class="col-6">
												<p class="mb-0">
													₹0
												</p>
												<div class="form-outline">
													<input type="number" asp-for="MinPrice" class="form-control" placeholder="0" />
												</div>
												<p class="mb-0">
													Min
												</p>
											</div>
											<div class="col-6">
												<p class="mb-0">
													₹10,000
												</p>
												<div class="form-outline">
													<input type="number" asp-for="MaxPrice" class="form-control" placeholder="-" value="10000" />
												</div>
												<p class="mb-0">
													Max
												</p>
											</div>
										</div>
										<button type="submit" class="btn btn-white w-100 border border-secondary">Apply</button>
									</div>
								</div>
							</form>
						</div>
						<div class="accordion-item">
							<h2 class="accordion-header" id="headingThree">
								<button class="accordion-button text-dark bg-light"
										type="button"
										data-mdb-toggle="collapse"
										data-mdb-target="#panelsStayOpen-collapseFour"
										aria-expanded="false"
										aria-controls="panelsStayOpen-collapseFour">
									Size
								</button>
							</h2>
							<form id="sizeFilterForm" asp-controller="Home" asp-action="Men" method="post">

								<div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse show" aria-labelledby="headingThree">
									<div class="accordion-body">
										<input type="checkbox" name="4 UK"class="btn-check border justify-content-center" id="btn-check1" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check1">4 UK</label>
										<input type="checkbox" name="5 UK" class="btn-check border justify-content-center" id="btn-check2" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check2">5 UK</label>
										<input type="checkbox" name="6 UK" class="btn-check border justify-content-center" id="btn-check3" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check3">6 UK</label>
										<input type="checkbox" name="7 UK" class="btn-check border justify-content-center" id="btn-check4" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check4">7 UK</label>

									</div>
								</div>

								<div id="panelsStayOpen-collapseFour 2" class="accordion-collapse collapse show 2" aria-labelledby="headingFour">
									<div class="accordion-body">
										<input type="checkbox" name="8 UK" class="btn-check border justify-content-center" id="btn-check5" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check5">8 UK</label>
										<input type="checkbox" name="9 UK" class="btn-check border justify-content-center" id="btn-check6" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check6">9 UK</label>
										<input type="checkbox" name="10 UK" class="btn-check border justify-content-center" id="btn-check7" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check7">10 UK</label>
										<input type="checkbox" name="11 UK" class="btn-check border justify-content-center" id="btn-check8" checked autocomplete="off" />
										<label class="btn btn-white mb-1 px-1" style="width: 60px;" for="btn-check8">11 UK</label>

									</div>
								</div>
							</form>
						</div>
						<div class="accordion-item">
							<h2 class="accordion-header" id="headingThree">
								<button class="accordion-button text-dark bg-light"
										type="button"
										data-mdb-toggle="collapse"
										data-mdb-target="#panelsStayOpen-collapseFive"
										aria-expanded="false"
										aria-controls="panelsStayOpen-collapseFive">
									Ratings
								</button>
							</h2>
							<div id="panelsStayOpen-collapseFive" class="accordion-collapse collapse show" aria-labelledby="headingThree">
								<div class="accordion-body">
									<!-- Default checkbox -->
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked />
										<label class="form-check-label" for="flexCheckDefault">
											<i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i>
											<i class="fas fa-star text-warning"></i>
										</label>
									</div>
									<!-- Default checkbox -->
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked />
										<label class="form-check-label" for="flexCheckDefault">
											<i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i>
											<i class="fas fa-star text-secondary"></i>
										</label>
									</div>
									<!-- Default checkbox -->
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked />
										<label class="form-check-label" for="flexCheckDefault">
											<i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-secondary"></i>
											<i class="fas fa-star text-secondary"></i>
										</label>
									</div>
									<!-- Default checkbox -->
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked />
										<label class="form-check-label" for="flexCheckDefault">
											<i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-secondary"></i><i class="fas fa-star text-secondary"></i>
											<i class="fas fa-star text-secondary"></i>
										</label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- sidebar -->
			<!-- content -->
			<div class="col-lg-9">
				<header></header>
				<!--
				<header class="d-sm-flex align-items-center border-bottom mb-4 pb-3">
					<strong class="d-block py-2">Mens Collection </strong>
					<div class="ms-auto">

						<div class="btn-group shadow-0 border">
							<a href="#" class="btn btn-light" title="List view">
								<i class="fa fa-bars fa-lg"></i>
							</a>
							<a href="#" class="btn btn-light active" title="Grid view">
								<i class="fa fa-th fa-lg"></i>
							</a>
						</div>
					</div>
				</header>
				-->
				<div class="row">
					@foreach (var item in Model.Products)
					{
						<div class="col-lg-4 col-md-6 col-sm-6 d-flex">
							<div class="card w-100 my-2 shadow-2-strong">
								<img src="/images/@Html.DisplayFor(model => item.Image)" class="card-img-top" />
								<div class="card-body d-flex flex-column">
									<div class="d-flex flex-row">
										<h5 class="mb-1 me-1">
											₹@Html.DisplayFor(model => item.Price)
										</h5>

										<!--        <span class="text-danger"><s>@Html.DisplayFor(model => item.Price)</s></span> -->
									</div>
									<p class="card-text">@Html.DisplayFor(model => item.Name)</p>
									<div class="">
										<a href="#!" class="btn btn-outline-primary">Add to cart</a>
										<a id="women" asp-controller="Products" asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-dark">View Details</a>
										

									</div>
								</div>
							</div>
						</div>

					}
					<hr />

					<!-- Pagination -->
					<nav aria-label="Page navigation example" class="d-flex justify-content-center mt-3">
						<ul class="pagination">
							<li class="page-item disabled">
								<a class="page-link" href="#" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
								</a>
							</li>
							<li class="page-item active"><a class="page-link" href="#">1</a></li>
							<li class="page-item"><a class="page-link" href="#">2</a></li>
							<li class="page-item"><a class="page-link" href="#">3</a></li>
							<li class="page-item"><a class="page-link" href="#">4</a></li>
							<li class="page-item"><a class="page-link" href="#">5</a></li>
							<li class="page-item">
								<a class="page-link" href="#" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
								</a>
							</li>
						</ul>
					</nav>
					<!-- Pagination -->
				</div>
			</div>
		</div>
</section>
<!-- sidebar + content -->
<!-- Footer -->
