							@Html.DisplayFor(model => model.Color)
						</dd>


						<dt class="col-1">Brand:</dt>
						<dd class="col-11">@Html.DisplayFor(model => model.Brand)</dd>
					</div>

					<hr />
					<form method="post">

					<div class="row mb-4">
						<div class="col-md-4 col-6">
							<label class="mb-2">Size</label>
							<select class="form-select border border-secondary" style="height: 35px;">

								<option>@Html.DisplayFor(Model => Model.Size[0])</option>
								<option>@Html.DisplayFor(Model => Model.Size[1])</option>
								<option>@Html.DisplayFor(Model => Model.Size[2])</option>
								<option>@Html.DisplayFor(Model => Model.Size[3])</option>

							</select>
						</div>
						<!-- col.// -->
						<div class="col-md-4 col-6 mb-3">
							<label class="mb-2 d-block">Quantity</label>
							<div class="input-group mb-3" style="width: 170px;">
								<div class="">

										<input type="hidden" name="ProductId" value="@Model.Id" />
										<input type="hidden" name="ProductName" value="@Model.Name" />
										<input type="hidden" name="Price" value="@Model.Price" />
										<input type="hidden" name="Image" value="@Model.Images[0]" />
											<select name="quantity"  style="width: 100px;" asp-for="selectQuantity" class="form-select me-4">
											<option>1</option>
											<option>2</option>

											<option>3</option>
											<option>4</option>
										</select>
								</div>
							</div>
						</div>
					</div>
					<a href="#" class="btn btn-warning shadow-0"> Buy now </a>

					@if (SignInManager.IsSignedIn(User))
					{

						<input type="submit" onclick="clickAlert()" value="Add to cart" class="btn btn-primary">
						<script>
							function clickAlert() {
								alert("Item added to cart successfully!");
							}
						</script>
					}
					else
					{

						<a asp-controller="Identity" asp-action="Account" asp-route-id="Login"><input type="button" onclick="clickAlert()" value="Add to cart" class="btn btn-primary"></a>
						<script>
							function clickAlert() {
								alert("Please login to continue");

							}
						</script>


					}
									</form>
					<a href="#" class="btn btn-light border border-secondary py-2 icon-hover px-3"> <i class="me-1 fa fa-heart fa-lg"></i> Save </a>
				</div>
			</main>
		</div>
	</div>
</section>
